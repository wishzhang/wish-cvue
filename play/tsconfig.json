{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@wele/*": ["packages/*"],
      "@root/*": ["../*"]
    },
    "types": ["vue/ref-macros", "unplugin-vue-define-options/macros-global"]
  },
  "include": ["**/*"]
}
